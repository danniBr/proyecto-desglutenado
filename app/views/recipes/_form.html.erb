    <%= form.label :photo %>
    <%= form.text_field :photo, id: :recipe_photo %>
  </div>

  <div class="field">
    <%= form.label :cant %>
    <%= form.number_field :cant, id: :recipe_cant %>
  </div>

  <div class="field">
    <%= form.label :ingredients %>
    <%= form.text_area :ingredients, id: :recipe_ingredients %>
  </div>

  <div class="field">
    <%= form.label :directions %>
    <%= form.text_area :directions, id: :recipe_directions %>
  </div>

  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>
